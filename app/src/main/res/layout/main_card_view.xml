<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/main_card_view_vertical_margin"
    android:layout_marginLeft="@dimen/main_card_view_horizontal_margin"
    android:layout_marginRight="@dimen/main_card_view_horizontal_margin"
    android:layout_marginTop="@dimen/main_card_view_vertical_margin"
    card_view:cardCornerRadius="4dp"
    android:background="@drawable/mock_trip_image">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mock_trip_image">

        <TextView
            android:id="@+id/main_card_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Card"
            android:textSize="28sp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
