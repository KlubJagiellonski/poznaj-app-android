<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="storiesViewModel" type="pl.poznajapp.viewmodel.MainViewModel" />
        <variable name="view" type="pl.poznajapp.view.MainActivity"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pl.poznajapp.view.MainActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_main_story_list_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:items="@{storiesViewModel.stories}"
            app:clickHandler="@{view.clickHandler}"/>

    </android.support.constraint.ConstraintLayout>
</layout>